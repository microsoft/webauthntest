    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Worker: Dev Server (Wrangler)",
            "command": "npx --yes wrangler@4 dev --name webauthntest --inspector-port 9229",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Worker: Attach Debugger (Inspector)",
            "address": "localhost",
            "port": 9229,
            "restart": true,
            "timeout": 30000
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Legacy: Node app.js",
            "program": "${workspaceFolder}/app.js"
        }
    ],
    "compounds": [
        {
            "name": "Worker: Debug (Wrangler + Attach)",
            "configurations": [
                "Worker: Dev Server (Wrangler)",
                "Worker: Attach Debugger (Inspector)"
            ],
            "stopAll": true
        }
    ]
}